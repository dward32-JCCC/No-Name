@model Game

<div class="text-center">
    <h1>Featured Game</h1>
    <ul class="list-group">
        <li class="list-group-item ">
            <h4>
                <a asp-controller="Game" 
                   asp-action="Details"                   
                   asp-route-id="@Model.GameId" 
                   asp-route-slug="@Model.Title.Slug()">
                    @Model.Title
                </a>
            </h4>
             <h2>
                  <a asp-controller="Game" 
                   asp-action="Details"                   
                   asp-route-id="@Model.GameId" 
                   asp-route-slug="@Model.Title.Slug()">
                  <img src="~/images/@Model.Image" width="500" height="500" />
                </a>
                
            </h2>
        </li>
    </ul>
</div>